extends layout/base-layout.pug

block content
    // Sign up form
    .d-flex.justify-content-center#registerForm(style="display: none")
        .row
        .col-md-6
            h2.title register
            form(action="/auth/register" method="POST")
                .form-group
                label(for="name") Name:
                input.form-control(type="text" id="name" name="userName" class="input" required)
                .form-group
                label(for="email") Email:
                input.form-control(type="email" id="email" name="email" class="email input" required)
                .form-group
                label(for="password") Password:
                input.form-control(type="password" id="password" name="password" class="password input" required)
                .form-group
                button.btn.btn-primary(type="submit") register

            a(href="/auth").btn.btn-link Already an account? Sign in

        